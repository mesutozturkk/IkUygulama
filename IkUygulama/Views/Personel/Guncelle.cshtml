                    @Html.ValidationMessageFor(model => model.Personel.Maas, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="container d-inline-flex">
            <div class="form-group">
                @Html.LabelFor(model => model.Personel.Bolum.BolumAd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Personel.BolumId, Model.BolumForDropDown)
                    @Html.ValidationMessageFor(model => model.Personel.BolumId, "", new { @class = "text-danger" })
                </div>
            </div>
