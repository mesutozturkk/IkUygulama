@model IkUygulama.Models.Views.PersonelModel

@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Guncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Tarih</h2>
        <p id="tarih"></p>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-inline">
            <div class="form-group">

                @Html.LabelFor(model => model.Personel.PersonelAd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Personel.PersonelAd, new { htmlAttributes = new { @class = "form-control" } })
