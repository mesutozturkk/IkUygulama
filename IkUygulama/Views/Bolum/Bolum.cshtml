@model IkUygulama.Models.Views.BolumModel

@{
    ViewBag.Title = "Bolum";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Bolum</h2>

<p>
    @Html.ActionLink("Yeni Giriş", "Ekle")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Bolum.BolumId)</th>
        <th>@Html.DisplayNameFor(model => model.Bolum.BolumAd)</th>
        
        
        
        <th>Güncelle</th>
        <th>Detay</th>
        <th>Sil</th>
    </tr>

@foreach (var item in Model.list) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.BolumId)</td>
        <td>@Html.DisplayFor(modelItem=>item.BolumAd)</td>
        <td>
            @Html.ActionLink("Güncelle", "Guncelle", new {id= item.BolumId }) |
        </td>
        <td>@Html.ActionLink("Detay", "Detay", new { id=item.BolumId }) |</td>
        <td>@Html.ActionLink("Sil", "Sil", new { id=item.BolumId })</td>
    </tr>
}

</table>
